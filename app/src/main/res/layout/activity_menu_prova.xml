<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    android:id="@+id/MRL_menu_prova"
    tools:context="com.glapps.mobile.japasseiencceja.activity.MenuProva">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trans_black_rounded_square">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_simulado" />

            <TextView
                android:id="@+id/tv_ano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simulado:"
                android:theme="@style/MyTextViewStyle" />

            <Spinner
                android:id="@+id/spinner_ano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/tv_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matéria:"
                android:theme="@style/MyTextViewStyle" />

            <Spinner
                android:id="@+id/spinner_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/tv_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="Nível:"
                android:theme="@style/MyTextViewStyle" />

            <Spinner
                android:id="@+id/spinner_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" />

            <CheckBox
                android:id="@+id/cb_conferir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Ver resposta na hora"
                android:textColor="@color/branco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_confirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRMAR"
                android:textSize="24sp"
                android:textStyle="bold"
                android:theme="@style/MyButtonStyle" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
